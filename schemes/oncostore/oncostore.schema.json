{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/qbicsoftware/metadata-specs/master/schemes/oncostore/oncostore.schema.json",
  "version": "0.1dev",
  "title": "Oncostore Metadata",
  "description": "Metadata that has to be provided with a VCF file in order to register variants in the oncostore",
  "type": "object",
  "properties": {
    "variant_calling": { "$ref": "definitions/software.json#/variant_calling" },
    "variant_annotation": { "$ref": "definitions/software.json#/variant_annotation" },
    "reference_genome": {"$ref": "definitions/genomic.json#/reference_genome"},
    "is_somatic": {"type": "boolean"}
  },
  "required": ["variant_calling", "variant_annotation", "is_somatic"]
}