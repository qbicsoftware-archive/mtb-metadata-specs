{
    "single_nucleotide_polymorphism": {
        "type": "object",
        "properties": {
            "chromosome": { "type": "str" },
            "start": { "type": "number" },
            "reference": { "type": "str" },
            "observed": { "type": "str" },
            "allele_frequency": {
                "type": "number",
                "minimum": "0",
                "maximum": "1" 
            },
            "genotype": {
                "type": "str",
                "enum": ["homozygous", "heterozygous"]
            },
            "coverage": {
                "type": "number",
                "minimum": "0"
            },
            "consequence": { "$ref": "#consequence" }
        }
    },
    "consequence": {
        "$id": "consequence",
        "type": "object",
        "properties": {
            "gene": { "anyOf": [{ "$ref": "#hgnc" }]},
            "base_change": { "anyOf": [{ "$ref": "#hgvs" }] },
            "aa_change": { "anyOf": [{ "$ref": "#hgvs" }] },
            "transcripts": {
                "type": "array",
                "items": { 
                    "anyOf": [{ "$ref": "#refseq_id" }, { "$ref": "#ensemble_id" }] }
                },
            "effect": { "anyOf": [{ "$ref": "#germline_effect" }, { "$ref": "#somatic_effect" }] }
        }
    },
    "germline_effect": {
        "$id": "germline_effect",
        "type": "str",
        "enum": ["pathogenic", "probably_pathogenic"]
    },
    "somatic_effect": {
        "$id": "somatic_effect",
        "type": "str",
        "enum": ["activating", "inactivating", "function_changed", "probably_activating", "probably_inactivating", "probable_function_change", "ambiguous", "benign"]
    },
    "hgvs": {
        "$id": "hgvs",
        "type": "str",
        "pattern": ""
    },
    "hgnc": {
        "$id": "hgnc",
        "type": "str",
        "pattern": ""
    },
    "refseq_id": {
        "$id": "refseq_id",
        "type": "str",
        "pattern": ""
    },
    "ensemble_id": {
        "$id": "ensemble_id",
        "type": "str",
        "pattern": ""
    },
    "copynumber_variation": {
        "type": "object",
        "properties": {
            "size": { "type": "str", "enum": [ "chromosome", "p-arm", "q-arm", "partial p-arm", "partial q-arm", "focal", "non-focal", "cluster" ] },
            "type": { "type": "str", "enum": [ "del", "dup", "amp", "loh", "ins" ] },
            "start": { "type": "number", "minimum": 0 },
            "end": { "type": "number", "minimum": 0 },
            "chromosome": { "type": "str" },
            "consequences": {
                "type": "array",
                "items": { "$ref": "#consequence" }
            }
        }
    },
    "structural_variant": {
        "type": "object",
        "properties": {
            "type": { "$ref": "#manta_svtype" },
            "left_breakpoint": { "$ref": "#breakpoint" },
            "right_breakpoint": { "$ref": "#breakpoint" },
            "consequences": {
                "type": "array",
                "items": { "$ref": "#consequence" }
            }
        }
    },
    "breakpoint": {
        "type": "object",
        "properties": {
            "chromosome": { "type": "str" },
            "position": { "type": "array", "items": [ { "type": "number" }, { "type": "number" }] }
        }
    },
    "manta_sv_type": {
        "type": "str",
        "enum": ["DEL", "INS", "DUP", "INV", "CNV", "BND"]
    }
}